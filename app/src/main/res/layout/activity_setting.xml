<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnChangeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Email"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnChangeUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Username"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="#FF0000"
    android:textColor="#FFFFFF"
    android:layout_marginTop="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"/>


    <!-- Additional settings options can be added here -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/button_nav_to_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:src="@drawable/message_icon"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/button_nav_to_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:src="@drawable/settings_icon"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/button_nav_to_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@color/transparent"
            android:src="@drawable/home_icon_2"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/button_new_post"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:src="@drawable/new_post_icon"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/video_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp" >

        <LinearLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>

