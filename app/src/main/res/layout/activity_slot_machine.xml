<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slotwp"
    android:padding="8dp">



    <!-- TextView for displaying VC balance -->
    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: 100 VC"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

    <!-- Container to hold the slots and center them in the parent layout -->
    <LinearLayout
        android:id="@+id/slots_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/tvBalance"
        android:background="@drawable/white_background"
        android:padding="28dp"
        android:layout_marginTop="120dp" >

        <ImageView
            android:id="@+id/slot1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slotlemon" />

        <ImageView
            android:id="@+id/slot2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slotlemon"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/slot3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slotlemon"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/slot4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slotlemon"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/slot5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/slotlemon"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Spin Button below the slots container -->
    <Button
        android:id="@+id/buttonSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spin"
        android:textSize="30dp"
        android:padding="40dp"
        android:layout_below="@id/slots_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />


</RelativeLayout>
